
/* Panel */

RightPanel (Panel)
	align: right
	size: 400, 200
	location: 100, 100
	background: dark
	blackSplit: true
	allowResize: true

	Hierarchy (Panel)
		background: light
		align: top
		size: 0, 400
		allowResize: true
		allowHide: true
		caption: "@menu.item1.caption"

		Layout (StackLayout)
			clientHeight: true

			OKButton (Button)
				size: 100, 21
				caption: "Hello Word!"
				align: left

			Lola (button)
				size: 100, 21
				caption: "Привет"
				align: center

			OkButton2 (button)
				size: 100, 21
				align: right
				caption: "OK"
