
/* Panel */

RightPanel (Panel)
	align: right
	size: 400, 200
	location: 100, 100
	background: dark
	blackSplit: true
	allowResize: true
	padding: 10

	Hierarchy (Panel)
		background: light
		align: top
		size: 0, 400
		allowResize: true
		allowHide: true
		caption: "@menu.item1.caption"
		padding: 10

		Layout (StackLayout)
			orientation: Horizontal

			OKButton (Button)
				size: 100, 21
				caption: "Hello Word!"
				marginRight: 10
				location: 100, 0

			Lola (button)
				size: 100, 21
				caption: "Привет"
				align: right

			OkButton2 (button)
				size: 100, 21
				align: right
				verticalAlign: bottom
				caption: "OK"
